<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green_500"
    tools:context=".ui.fragment.HomeFragment">

    <LinearLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="16dp"
        android:padding="16dp">

        <LinearLayout
            android:layout_marginEnd="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Selamat datang kembali,"
                android:textColor="@color/green_50"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/welcoming_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Wahyu Purnomo"
                android:textColor="@color/green_50"
                android:textStyle="bold"
                android:textSize="18sp"/>
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/beranda_ls"
            android:layout_gravity="center_vertical|end"/>
    </LinearLayout>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:id="@+id/standard_bottom_sheet"
            style="@style/Widget.Material3.BottomSheet"
            app:behavior_hideable="false"
            app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/minus"
                android:layout_gravity="center|top"/>
            <TextView
                android:layout_marginTop="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kategori"
                android:textColor="@color/green_950"
                android:textSize="16sp"/>
            <LinearLayout
                android:layout_marginTop="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal">
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/category_1"
                    android:layout_width="76dp"
                    android:layout_height="76dp"
                    android:backgroundTint="@color/green_100"
                    app:strokeColor="@color/green_600"
                    android:layout_marginEnd="8dp">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:id="@+id/category_card_image1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/category_1"/>
                        <TextView
                            android:background="#4526382D"
                            app:layout_constraintLeft_toLeftOf="@id/category_card_image1"
                            app:layout_constraintRight_toRightOf="@id/category_card_image1"
                            app:layout_constraintBottom_toBottomOf="@id/category_card_image1"
                            android:id="@+id/category_card_name1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Bunga"
                            android:textColor="@color/green_50"
                            android:textSize="12sp"
                            android:textAlignment="center"
                            android:paddingTop="6dp"
                            android:paddingBottom="6dp"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/category_2"
                    android:layout_width="76dp"
                    android:layout_height="76dp"
                    android:backgroundTint="@color/green_100"
                    app:strokeColor="@color/green_600"
                    android:layout_marginEnd="8dp">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/category_card_image2"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/category_2"/>
                        <TextView
                            android:background="#4526382D"
                            app:layout_constraintLeft_toLeftOf="@id/category_card_image2"
                            app:layout_constraintRight_toRightOf="@id/category_card_image2"
                            app:layout_constraintBottom_toBottomOf="@id/category_card_image2"
                            android:id="@+id/category_card_name2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Bunga"
                            android:textColor="@color/green_50"
                            android:textSize="12sp"
                            android:textAlignment="center"
                            android:paddingTop="6dp"
                            android:paddingBottom="6dp"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/category_3"
                    android:layout_width="76dp"
                    android:layout_height="76dp"
                    android:backgroundTint="@color/green_100"
                    app:strokeColor="@color/green_600"
                    android:layout_marginEnd="8dp">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/category_card_image3"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/category_3"/>
                        <TextView
                            android:background="#4526382D"
                            app:layout_constraintLeft_toLeftOf="@id/category_card_image3"
                            app:layout_constraintRight_toRightOf="@id/category_card_image3"
                            app:layout_constraintBottom_toBottomOf="@id/category_card_image3"
                            android:id="@+id/category_card_name3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Pohon"
                            android:textColor="@color/green_50"
                            android:textSize="12sp"
                            android:textAlignment="center"
                            android:paddingTop="6dp"
                            android:paddingBottom="6dp"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/category_4"
                    android:layout_width="76dp"
                    android:layout_height="76dp"
                    android:backgroundTint="@color/green_100"
                    app:strokeColor="@color/green_600">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/category_card_image4"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/category_4"/>
                        <TextView
                            android:background="#4526382D"
                            app:layout_constraintLeft_toLeftOf="@id/category_card_image4"
                            app:layout_constraintRight_toRightOf="@id/category_card_image4"
                            app:layout_constraintBottom_toBottomOf="@id/category_card_image4"
                            android:id="@+id/category_card_name4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Bunga"
                            android:textColor="@color/green_50"
                            android:textSize="12sp"
                            android:textAlignment="center"
                            android:paddingTop="6dp"
                            android:paddingBottom="6dp"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>
            <TextView
                android:layout_marginTop="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Artikel"
                android:textSize="16sp"
                android:textColor="@color/green_950"/>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginTop="16dp"
                app:layoutManager="com.google.android.material.carousel.CarouselLayoutManager"
                android:id="@+id/home_slider"
                android:layout_width="match_parent"
                android:layout_height="196dp"
                android:clipChildren="false"
                android:clipToPadding="false" />
            <TextView
                android:layout_marginTop="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rekomendasi Untuk Anda"
                android:textSize="16sp"
                android:textColor="@color/green_950"/>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/view_card"/>


        </LinearLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</androidx.constraintlayout.widget.ConstraintLayout>