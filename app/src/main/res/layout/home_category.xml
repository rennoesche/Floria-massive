<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_marginTop="16dp"
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kategori"
        android:textColor="@color/green_950"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/category_1"
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@color/green_100"
            app:strokeColor="@color/green_600">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/category_card_image1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/category_1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/category_card_name1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#4526382D"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:text="Bunga"
                    android:textAlignment="center"
                    android:textColor="@color/green_50"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@id/category_card_image1"
                    app:layout_constraintLeft_toLeftOf="@id/category_card_image1"
                    app:layout_constraintRight_toRightOf="@id/category_card_image1" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/category_2"
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@color/green_100"
            app:strokeColor="@color/green_600">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/category_card_image2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/category_2"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/category_card_name2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#4526382D"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:textStyle="bold"
                    android:text="Bunga"
                    android:textAlignment="center"
                    android:textColor="@color/green_50"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@id/category_card_image2"
                    app:layout_constraintLeft_toLeftOf="@id/category_card_image2"
                    app:layout_constraintRight_toRightOf="@id/category_card_image2" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/category_3"
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@color/green_100"
            app:strokeColor="@color/green_600">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/category_card_image3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/category_3"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/category_card_name3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#4526382D"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:textStyle="bold"
                    android:text="Pohon"
                    android:textAlignment="center"
                    android:textColor="@color/green_50"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@id/category_card_image3"
                    app:layout_constraintLeft_toLeftOf="@id/category_card_image3"
                    app:layout_constraintRight_toRightOf="@id/category_card_image3" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/category_4"
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:backgroundTint="@color/green_100"
            app:strokeColor="@color/green_600">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/category_card_image4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/category_4"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/category_card_name4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#4526382D"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:textStyle="bold"
                    android:text="Bunga"
                    android:textAlignment="center"
                    android:textColor="@color/green_50"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@id/category_card_image4"
                    app:layout_constraintLeft_toLeftOf="@id/category_card_image4"
                    app:layout_constraintRight_toRightOf="@id/category_card_image4" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>